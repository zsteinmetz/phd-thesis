  shorttitle = {Assessing the Visual Quality of Green Landscaping in Rural Residential Areas},
  author = {Yao, Yumin and Zhu, Xiaodong and Xu, Yingbi and Yang, Haiyan and Wu, Xian and Li, Yangfan and Zhang, Yanfeng},
