  keywords = {aphids,Lycopersicon esculentum,plant height,soil temperatures,thrips,tomato mottle virus,whiteflies},
  file = {/home/steinmetz-z/.zotero/zotero/ucbib/storage/MDG6RJCU/Csizinszky et al. - 1995 - Color Mulches Influence Yield and Insect Pest Popu.pdf}
}

@article{CuelloImpact2015,
  title = {Impact of Plastic Film Mulching on Increasing Greenhouse Gas Emissions in Temperate Upland Soil during Maize Cultivation},
  author = {Cuello, Jennifer P. and Hwang, Hyun Young and Gutierrez, Jessie and Kim, Sang Yoon and Kim, Pil Joo},
