@article{NelDetection2021,
  ids = {NelDetection2021a},
  title = {Detection Limits Are Central to Improve Reporting Standards When Using {{Nile}} Red for Microplastic Quantification},
  author = {Nel, Holly A. and Chetwynd, Andrew J. and Kelleher, Liam and Lynch, Iseult and Mansfield, Imogen and Margenat, Henar and Onoja, Simeon and Goldberg Oppenheimer, Pola and Sambrook Smith, Gregory H. and Krause, Stefan},
  date = {2021-01-01},
