@article{CrichtonNovel2017,
  title = {A Novel, Density-Independent and {{FTIR-compatible}} Approach for the Rapid Extraction of Microplastics from Aquatic Sediments},
  author = {Crichton, Ellika M. and Noël, Marie and Gies, Esther A. and Ross, Peter S.},
  date = {2017-03-02},
  journaltitle = {Analytical Methods},
  shortjournal = {Anal. Methods},
  volume = {9},
