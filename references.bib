@article{LevinRemote2007,
  title = {Remote Sensing as a Tool for Monitoring Plasticulture in Agricultural Landscapes},
  author = {Levin, N. and Lugassi, R. and Ramon, U. and Braun, O. and Ben-Dor, E.},
