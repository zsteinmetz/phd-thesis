  keywords = {(micro)plastic,daphnia-magna,Engineering,Environmental Sciences & Ecology,health,Heavy metal,Inductively coupled plasma mass,marine-environment,microplastics,microspectroscopy (RM),paint,Paint (micro)particles,particles,production pellets,quantification,Raman,spectrometry (ICP-MS),Subalpine lake,toxic metals,trace-metals,Water Resources},
