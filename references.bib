@article{GongComparative2019,
  title = {Comparative Analysis on the Sorption Kinetics and Isotherms of Fipronil on Nondegradable and Biodegradable Microplastics},
  author = {Gong, Wenwen and Jiang, Mengyun and Han, Ping and Liang, Gang and Zhang, Tingting and Liu, Guannan},
  date = {2019-11-01},
  journaltitle = {Environmental Pollution},
  shortjournal = {Environmental Pollution},
  volume = {254},
