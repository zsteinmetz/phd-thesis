@incollection{HaleAnalytical2022,
  title = {Analytical {{Chemistry}} of {{Plastic Debris}}: {{Sampling}}, {{Methods}}, and {{Instrumentation}}},
  shorttitle = {Analytical {{Chemistry}} of {{Plastic Debris}}},
  booktitle = {Microplastic in the {{Environment}}: {{Pattern}} and {{Process}}},
