@article{FelsingNew2018,
  title = {A New Approach in Separating Microplastics from Environmental Samples Based on Their Electrostatic Behavior},
  author = {Felsing, Stefanie and Kochleus, Christian and Buchinger, Sebastian and Brennholt, Nicole and Stock, Friederike and Reifferscheid, Georg},
