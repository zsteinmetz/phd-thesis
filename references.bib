@article{CordierHow2019,
  title = {How Much Innovation Is Needed to Protect the Ocean from Plastic Contamination?},
  author = {Cordier, Mateo and Uehara, Takuro},
  date = {2019-06-20},
  journaltitle = {Science of The Total Environment},
