@article{GracaStyrofoam2014,
  title = {Styrofoam Debris as a Potential Carrier of Mercury within Ecosystems},
  author = {Graca, Bożena and Bełdowska, Magdalena and Wrzesień, Patrycja and Zgrundo, Aleksandra},
