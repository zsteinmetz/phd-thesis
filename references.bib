  keywords = {BEHAVIOR,CALORIMETRY,cane sugar,differential scanning calorimetry,DYNAMICS,FRACTIONS,inorganic compounds,latosol soil,MASS-SPECTROMETRY,organic fraction,ORGANIC-MATTER,plantation,TEMPERATURE,thermogravimetry,THERMOGRAVIMETRY,WILDFIRES},
