@article{AteiaSorption2020,
  title = {Sorption Behavior of Real Microplastics ({{MPs}}): {{Insights}} for Organic Micropollutants Adsorption on a Large Set of Well-Characterized {{MPs}}},
  shorttitle = {Sorption Behavior of Real Microplastics ({{MPs}})},
  author = {Ateia, Mohamed and Zheng, Ting and Calace, Stefania and Tharayil, Nishanth and Pilla, Srikanth and Karanfil, Tanju},
  date = {2020-06-10},
  journaltitle = {Science of The Total Environment},
