  keywords = {bacteria,freshwater sediment,microplastics,polycyclic aromatic hydrocarbons,polyethylene,vector effect},
  file = {/home/steinmetz-z/.zotero/zotero/ucbib/storage/V5JCHSMX/Kleinteich et al. - 2018 - Microplastics Reduce Short-Term Effects of Environ.pdf}
}

