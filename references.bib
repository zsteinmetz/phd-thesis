@article{daCostaMicroplastics2018,
  title = {Microplastics in Soils: Assessment, Analytics and Risks},
  shorttitle = {Microplastics in Soils},
  author = {da Costa, João Pinto and Paço, Ana and Santos, Patrícia S. M. and Duarte, Armando C. and Rocha-Santos, Teresa},
