@article{CastelvetroQuantification2020,
  title = {Quantification of Poly(Ethylene Terephthalate) Micro- and Nanoparticle Contaminants in Marine Sediments and Other Environmental Matrices},
  author = {Castelvetro, Valter and Corti, Andrea and Bianchi, Sabrina and Ceccarini, Alessio and Manariti, Antonella and Vinciguerra, Virginia},
