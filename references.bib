  keywords = {Agriculture,Brassica pekinensis,brassica-juncea,cadmium,Chemistry,CHEMISTRY,Food Science & Technology,growth,heavy metals,lead,parts,phytoremediation,Phytoremediation,plants,PLANTS,shoots,temperature,TEMPERATURE,zinc}
