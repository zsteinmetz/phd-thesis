@article{HarrisonInteractions2011,
  title = {Interactions {{Between Microorganisms}} and {{Marine Microplastics}}: {{A Call}} for {{Research}}},
  shorttitle = {Interactions {{Between Microorganisms}} and {{Marine Microplastics}}},
  author = {Harrison, Jesse P. and Sapp, Melanie and Schratzberger, Michaela and Osborn, A. Mark},
  year = {March/April 2011},
  journaltitle = {Marine Technology Society Journal},
  shortjournal = {Mar. Technol. Soc. J.},
  volume = {45},
  number = {2},
  pages = {12--20},
  issn = {0025-3324},
