@article{vandenBergSewage2020,
  title = {Sewage Sludge Application as a Vehicle for Microplastics in Eastern {{Spanish}} Agricultural Soils},
  author = {van den Berg, Pim and Huerta-Lwanga, Esperanza and Corradini, Fabio and Geissen, Violette},
  options = {useprefix=true},
