@article{VermeirenMicroplastic2020,
  ids = {VermeirenMicroplastic2020a},
  title = {Microplastic Identification and Quantification from Organic Rich Sediments: {{A}} Validated Laboratory Protocol},
  shorttitle = {Microplastic Identification and Quantification from Organic Rich Sediments},
  author = {Vermeiren, P. and Muñoz, C. and Ikejima, K.},
