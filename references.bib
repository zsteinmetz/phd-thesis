@article{MansaThermogravimetric2021,
  title = {Thermogravimetric Analysis of Microplastics: {{A}} Mini Review},
  shorttitle = {Thermogravimetric Analysis of Microplastics},
  author = {Mansa, Rola and Zou, Shan},
