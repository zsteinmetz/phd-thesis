@article{RooseOrganic2001,
  title = {Organic Matter Management for Soil Conservation and Productivity Restoration in {{Africa}}: A Contribution from {{Francophone}} Research},
  shorttitle = {Organic Matter Management for Soil Conservation and Productivity Restoration in {{Africa}}},
  author = {Roose, Eric and Barthès, Bernard},
  date = {2001-09-01},
