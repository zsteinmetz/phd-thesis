@article{WanRunoff1999,
  title = {Runoff and Soil Erosion as Affected by Plastic Mulch in a {{Hawaiian}} Pineapple Field},
  author = {Wan, Y and El-Swaify, S. A},
  date = {1999-09},
  journaltitle = {Soil and Tillage Research},
  shortjournal = {Soil and Tillage Research},
