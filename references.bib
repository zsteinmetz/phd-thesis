  keywords = {chromatography-mass-spectrometry,Environmental Sciences & Ecology,extraction,Gas chromatography,marine-environment,Microplastics,pollution,polyethylene,Polymer,polymers,products,py-gc/ms,pyrolysis-gas chromatography,quantification,Thermal desorption},
