@article{LocascioRed2005,
  title = {Red and {{Black Mulch Color Affects Production}} of {{Florida Strawberries}}},
  author = {Locascio, S. J. and Gilreath, J. P. and Olson, S. and Hutchinson, C. M. and Chase, C. A.},
