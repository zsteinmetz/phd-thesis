  keywords = {Contamination,Geospatial approach,Interesting,Microplastic,Spatial distribution,Vertical transfer},
  file = {/home/steinmetz-z/.zotero/zotero/ucbib/storage/44N6LI92/Weber and Opp - 2020 - Spatial patterns of mesoplastics and coarse microp.pdf}
