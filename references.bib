@article{LiuEffects2013,
  title = {Effects of Water Management with Plastic Film in a Semi-Arid Agricultural System on Available Soil Carbon Fractions},
  author = {Liu, Chang-An and Li, Feng-Rui and Zhou, Li-Min and Feng, Qi and Li, Xin and Pan, Cheng-Chen and Wang, Le and Chen, Ji-Ling and Li, Xiao-Gang and Jia, Yu and Siddique, Kadambot H. M. and Li, Feng-Min},
  date = {2013-07},
  journaltitle = {European Journal of Soil Biology},
