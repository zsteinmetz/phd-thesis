@article{BillingsPlasticisers2021,
  title = {Plasticisers in the Terrestrial Environment: Sources, Occurrence and Fate},
  shorttitle = {Plasticisers in the Terrestrial Environment},
  author = {Billings, Alex and Jones, Kevin C. and Pereira, M. Glória and Spurgeon, David J. and Billings, Alex and Jones, Kevin C. and Pereira, M. Glória and Spurgeon, David J.},
