  keywords = {DISEASES,GROWTH,PATHOGENS,polyethylene (PE) mulch,Polyethylene (PE) mulch,Polyethylene mulches,POPULATIONS,seed germination,soil chemical properties,Soil chemical properties,soil temperature,Soil temperature,SOLARIZATION,THERMAL DEATH},
