@article{RusynModes2006,
  title = {Modes of {{Action}} and {{Species-Specific Effects}} of {{Di-}}(2-Ethylhexyl){{Phthalate}} in the {{Liver}}},
  author = {Rusyn, Ivan and Peters, Jeffrey M. and Cunningham, Michael L.},
  date = {2006-01-01},
