@article{MatsuiIdentification2020,
  title = {Identification Algorithm for Polymer Mixtures Based on {{Py-GC}}/{{MS}} and Its Application for Microplastic Analysis in Environmental Samples},
  author = {Matsui, Kazuko and Ishimura, Takahisa and Mattonai, Marco and Iwai, Itsuko and Watanabe, Atsushi and Teramae, Norio and Ohtani, Hajime and Watanabe, Chuichi},
