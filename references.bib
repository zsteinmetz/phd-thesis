}

@article{DiehlSoil2013,
  title = {Soil Water Repellency: {{Dynamics}} of Heterogeneous Surfaces},
  shorttitle = {Soil Water Repellency},
  author = {Diehl, Dörte},
  date = {2013-09-05},
  journaltitle = {Colloids and Surfaces A: Physicochemical and Engineering Aspects},
  shortjournal = {Colloids and Surfaces A: Physicochemical and Engineering Aspects},
  volume = {432},
