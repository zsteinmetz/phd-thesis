@article{MaulMicrobial2014,
  title = {Microbial Community Structure and Abundance in the Rhizosphere and Bulk Soil of a Tomato Cropping System That Includes Cover Crops},
  author = {Maul, Jude E. and Buyer, Jeffrey S. and Lehman, R. Michael and Culman, Steve and Blackwood, Christopher B. and Roberts, Daniel P. and Zasada, Inga A. and Teasdale, John R.},
