@article{KleinOccurrence2015,
  title = {Occurrence and {{Spatial Distribution}} of {{Microplastics}} in {{River Shore Sediments}} of the {{Rhine-Main Area}} in {{Germany}}},
  shorttitle = {Occurrence and {{Spatial Distribution}} of {{Microplastics}} in {{River Shore Sediments}} of the {{Rhine-Main Area}} in {{Germany}}},
