  keywords = {Cosmetic polyethylene,Effluent discharge,Engineering,Environmental Sciences & Ecology,identification,ingestion,Large-volume sampling,marine-environment,Microplastic pollutants,pollution,river,sediments,Surface filtering,Wastewater treatment,Water Resources},
