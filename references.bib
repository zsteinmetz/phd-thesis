@article{WenigPostoptimization2011,
  title = {Post-Optimization of {{Py-GC}}/{{MS}} Data: {{A}} Case Study Using a New Digital Chemical Noise Reduction Filter ({{NOISERA}}) to Enhance the Data Quality Utilizing {{OpenChrom}} Mass Spectrometric Software},
