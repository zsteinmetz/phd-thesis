@article{ZhangEcosystem2007,
  title = {Ecosystem Services and Dis-Services to Agriculture},
  author = {Zhang, Wei and Ricketts, Taylor H. and Kremen, Claire and Carney, Karen and Swinton, Scott M.},
  date = {2007-12-15},
  journaltitle = {Ecological Economics},
