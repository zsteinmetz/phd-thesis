@article{ZhangSystematical2021,
  title = {Systematical Review of Interactions between Microplastics and Microorganisms in the Soil Environment},
  author = {Zhang, Xuyuan and Li, Yong and Ouyang, Dan and Lei, Junjie and Tan, Qianlong and Xie, Lingli and Li, Ziqian and Liu, Ting and Xiao, Yunmu and Farooq, Taimoor Hassan and Wu, Xiaohong and Chen, Liang and Yan, Wende},
  date = {2021-09-15},
