@article{XingInteractions2021,
  title = {Interactions between Water Flow and Microplastics in Silt Loam and Loamy Sand},
  author = {Xing, Xuguang and Yu, Miao and Xia, Tianjiao and Ma, Li},
  date = {2021-09-19},
  journaltitle = {Soil Science Society of America Journal},
  shortjournal = {Soil Sci. Soc. Am. J.},
  volume = {n/a},
  number = {n/a},
  issn = {1435-0661},
  doi = {10.1002/saj2.20337},
  abstract = {The microplastics (MPs) intervention threats in the cropland always result in a water flow alteration, which is the leading cause behind MP transport and its distribution. This study investigated water infiltration and MPs transport and distribution on MP-contaminated silt loam and loamy sand to explore how water flow and MPs affects each other and reveal their mechanisms. The results indicated that water infiltration increased as the content of MP present in the soils increased from 1 to 7\% (w/w), which increased the MP number in deeper soil layers. Besides, for the silt loam sample, the MP concentration first increased to higher levels at 15–20 cm and then decreased. The MPs with sizes of 0–150 μm and 150–500 μm were found in excess at 25–30 cm and 5–20 cm depths, respectively. In the case of the loamy sand sample, the MP concentration gradually increased up to 30 cm depth, and the MPs with sizes of 0–150 μm and 150–500 μm were found in excess at 5–10 cm and 15–30 cm depths, respectively. The increased infiltration was due to the increased hydraulic conductivity resulting from inhibition of soil particle aggregation, increased soil porosity, and strong hydrophobicity of MP particles. The difference in proportions of various MP particle sizes in soil layers was due to the differences in migration ability in pores for various soil samples and MP particle aggregation features. This article is protected by copyright. All rights reserved},
  langid = {english},
  annotation = {\_eprint: https://acsess.onlinelibrary.wiley.com/doi/pdf/10.1002/saj2.20337},
  file = {/home/steinmetz-z/.zotero/zotero/ucbib/storage/SHWFYPLX/Xing et al. - Interactions between water flow and microplastics .pdf}
}

@article{XiongSources2018,
  ids = {Sources2018},
  title = {Sources and Distribution of Microplastics in {{China}}'s Largest Inland Lake – {{Qinghai Lake}}},
  author = {Xiong, Xiong and Zhang, Kai and Chen, Xianchuan and Shi, Huahong and Luo, Ze and Wu, Chenxi},
