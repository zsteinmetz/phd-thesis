@article{RennerNew2017,
  ids = {RennerNew2017a},
  title = {A {{New Chemometric Approach}} for {{Automatic Identification}} of {{Microplastics}} from {{Environmental Compartments Based}} on {{FT-IR Spectroscopy}}},
  author = {Renner, Gerrit and Schmidt, Torsten C. and Schram, Jürgen},
