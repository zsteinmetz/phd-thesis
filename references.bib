@article{SollinsStabilization1996,
  title = {Stabilization and Destabilization of Soil Organic Matter: Mechanisms and Controls},
  shorttitle = {Stabilization and Destabilization of Soil Organic Matter},
  author = {Sollins, Phillip and Homann, Peter and Caldwell, Bruce A.},
