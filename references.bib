@article{HaraguchiEffect2004,
  title = {Effect of Plastic-Film Mulching on Leaching of Nitrate Nitrogen in an Upland Field Converted from Paddy},
  author = {Haraguchi, Tomokazu and Marui, Atsushi and Yuge, Kozue and Nakano, Yoshisuke and Mori, Ken},
