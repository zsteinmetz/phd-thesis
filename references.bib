@article{KumarMicroplastics2020,
  title = {Microplastics as Pollutants in Agricultural Soils},
  author = {Kumar, Manish and Xiong, Xinni and He, Mingjing and Tsang, Daniel C. W. and Gupta, Juhi and Khan, Eakalak and Harrad, Stuart and Hou, Deyi and Ok, Yong Sik and Bolan, Nanthi S.},
