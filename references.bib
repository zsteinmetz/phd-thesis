@article{LeslieMicroplastics2017,
  title = {Microplastics En Route: {{Field}} Measurements in the {{Dutch}} River Delta and {{Amsterdam}} Canals, Wastewater Treatment Plants, {{North Sea}} Sediments and Biota},
