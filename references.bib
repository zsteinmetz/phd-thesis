@article{WaldschlagerInfiltration2020,
  title = {Infiltration {{Behavior}} of {{Microplastic Particles}} with {{Different Densities}}, {{Sizes}}, and {{Shapes}}—{{From Glass Spheres}} to {{Natural Sediments}}},
  author = {Waldschläger, Kryss and Schüttrumpf, Holger},
