@article{CorradiniPredicting2019,
  title = {Predicting Soil Microplastic Concentration Using Vis-{{NIR}} Spectroscopy},
  author = {Corradini, Fabio and Bartholomeus, Harm and Huerta Lwanga, Esperanza and Gertsen, Hennie and Geissen, Violette},
