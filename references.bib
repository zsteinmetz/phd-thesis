  keywords = {cucumber,Cucumber,light transmission,Microclimate,MICROCLIMATE,pepper,PEPPER,tomato,TOMATO,wavelength selective},
  file = {/home/steinmetz-z/.zotero/zotero/ucbib/storage/5C99GNQD/Waterer2008_Potential_to_double-crop_PM.pdf}
