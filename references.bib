@article{BialeSystematic2021,
  title = {A {{Systematic Study}} on the {{Degradation Products Generated}} from {{Artificially Aged Microplastics}}},
  author = {Biale, Greta and La Nasa, Jacopo and Mattonai, Marco and Corti, Andrea and Vinciguerra, Virginia and Castelvetro, Valter and Modugno, Francesca},
  date = {2021-01},
  journaltitle = {Polymers},
  volume = {13},
