@article{SimmonsCharacterization2014,
  title = {Characterization of Bacterial Communities in Solarized Soil Amended with Lignocellulosic Organic Matter},
  author = {Simmons, Christopher W. and Claypool, Joshua T. and Marshall, Megan N. and Jabusch, Lauren K. and Reddy, Amitha P. and Simmons, Blake A. and Singer, Steven W. and Stapleton, James J. and VanderGheynst, Jean S.},
