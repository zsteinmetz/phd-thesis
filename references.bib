@article{LianEffects2021,
  title = {Effects of Microplastics Derived from Polymer-Coated Fertilizer on Maize Growth, Rhizosphere, and Soil Properties},
  author = {Lian, Jiapan and Liu, Weitao and Meng, Lingzuo and Wu, Jiani and Zeb, Aurang and Cheng, Liping and Lian, Yuhang and Sun, Hongwen},
