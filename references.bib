@article{WuMicroplastics2020,
  title = {Microplastics in Waters and Soils: {{Occurrence}}, Analytical Methods and Ecotoxicological Effects},
  shorttitle = {Microplastics in Waters and Soils},
  author = {Wu, Mengjie and Yang, Chunping and Du, Cheng and Liu, Hongyu},
