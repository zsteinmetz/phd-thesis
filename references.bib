@article{KucerikLinking2018,
  title = {Linking Soil Organic Matter Thermal Stability with Contents of Clay, Bound Water, Organic Carbon and Nitrogen},
  author = {Kučerík, Jiří and Tokarski, David and Demyan, Michael Scott and Merbach, Ines and Siewert, Christian},
