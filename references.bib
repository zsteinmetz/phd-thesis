@article{SmedesPartitioning2017,
  title = {Partitioning of Hydrophobic Organic Contaminants between Polymer and Lipids for Two Silicones and Low Density Polyethylene},
  author = {Smedes, Foppe and Rusina, Tatsiana P. and Beeltje, Henry and Mayer, Philipp},
  date = {2017-11-01},
  journaltitle = {Chemosphere},
