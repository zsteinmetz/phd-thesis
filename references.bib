@article{Arias-AndresMicroplastics2018,
  title = {Microplastics: {{New}} Substrates for Heterotrophic Activity Contribute to Altering Organic Matter Cycles in Aquatic Ecosystems},
  shorttitle = {Microplastics},
  author = {Arias-Andres, Maria and Kettner, Marie Therese and Miki, Takeshi and Grossart, Hans-Peter},
