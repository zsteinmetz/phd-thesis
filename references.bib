  langid = {english},
  keywords = {artificial ageing,Interesting,microplastics,polyethylene terephthalate,polymer degradation,polyolefins,polystyrene},
  file = {/home/steinmetz-z/.zotero/zotero/ucbib/storage/65U5X2KS/Biale et al. - 2021 - A Systematic Study on the Degradation Products Gen.pdf}
