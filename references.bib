@article{BradenCalculation2005,
  title = {Calculation of Microclimate under Plastic Mulches Using an Extended Version of the {{SVAT}} Model {{AMBETI}}},
  shorttitle = {Calculation of Microclimate under Plastic Mulches Using an Extended Version of the {{SVAT}} Model {{AMBETI}}},
