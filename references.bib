@article{RezaeiWind2019,
  title = {Wind Erosion as a Driver for Transport of Light Density Microplastics},
  author = {Rezaei, Mahrooz and Riksen, Michel J. P. M. and Sirjani, Elham and Sameni, Abdolmajid and Geissen, Violette},
  date = {2019-06-15},
  journaltitle = {Science of The Total Environment},
  shortjournal = {Science of The Total Environment},
  volume = {669},
