  keywords = {burrows,earthworms,Engineering,environment,Environmental Sciences & Ecology,growth,ingestion,l.,litter,plastics,reproduction,soil},
  file = {/home/steinmetz-z/.zotero/zotero/ucbib/storage/728FWC2Q/JD-00076.pdf}
