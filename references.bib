@article{CorradiniEvidence2019,
  title = {Evidence of Microplastic Accumulation in Agricultural Soils from Sewage Sludge Disposal},
  author = {Corradini, Fabio and Meza, Pablo and Eguiluz, Raúl and Casado, Francisco and Huerta-Lwanga, Esperanza and Geissen, Violette},
  date = {2019-06-25},
  journaltitle = {Science of The Total Environment},
  shortjournal = {Science of The Total Environment},
  volume = {671},
