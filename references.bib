@article{deSouzaMachadoImpacts2018,
  title = {Impacts of {{Microplastics}} on the {{Soil Biophysical Environment}}},
  author = {de Souza Machado, Anderson Abel and Lau, Chung Wai and Till, Jennifer and Kloas, Werner and Lehmann, Anika and Becker, Roland and Rillig, Matthias C.},
