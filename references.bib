  langid = {english},
  keywords = {Gases,Hydrocarbons,Oceans,Plastics,Polyethylene,Polymers,Solar radiation,Ultraviolet B},
  file = {/home/steinmetz-z/.zotero/zotero/ucbib/storage/MKV9U4WI/Royer et al. - 2018 - Production of methane and ethylene from plastic in.pdf}
