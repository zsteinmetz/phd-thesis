@article{terHalleWhat2017,
  title = {To What Extent Are Microplastics from the Open Ocean Weathered?},
  author = {ter Halle, Alexandra and Ladirat, Lucie and Martignac, Marion and Mingotaud, Anne Françoise and Boyron, Olivier and Perez, Emile},
