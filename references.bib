@article{WangOccurrence2015,
  title = {Occurrence and Risk Assessment of Phthalate Esters ({{PAEs}}) in Vegetables and Soils of Suburban Plastic Film Greenhouses},
  author = {Wang, Jun and Chen, Gangcai and Christie, Peter and Zhang, Manyun and Luo, Yongming and Teng, Ying},
