@article{KleinteichMicroplastics2018,
  title = {Microplastics {{Reduce Short-Term Effects}} of {{Environmental Contaminants}}. {{Part II}}: {{Polyethylene Particles Decrease}} the {{Effect}} of {{Polycyclic Aromatic Hydrocarbons}} on {{Microorganisms}}},
  shorttitle = {Microplastics {{Reduce Short-Term Effects}} of {{Environmental Contaminants}}. {{Part II}}},
