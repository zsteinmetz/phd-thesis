}

@article{TianEffects2012,
  title = {Effects of Land Use Intensity on Dissolved Organic Carbon Properties and Microbial Community Structure},
  author = {Tian, Jing and Fan, Mingsheng and Guo, Jingheng and Marschner, Petra and Li, Xiaolin and Kuzyakov, Yakov},
  date = {2012-09},
  journaltitle = {European Journal of Soil Biology},
