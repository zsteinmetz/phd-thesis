@article{vanStraatenConversion2015,
  title = {Conversion of Lowland Tropical Forests to Tree Cash Crop Plantations Loses up to One-Half of Stored Soil Organic Carbon},
  author = {van Straaten, Oliver and Corre, Marife D. and Wolf, Katrin and Tchienkoua, Martin and Cuellar, Eloy and Matthews, Robin B. and Veldkamp, Edzo},
  options = {useprefix=true},
  date = {2015-08-11},
  journaltitle = {Proceedings of the National Academy of Sciences},
  shortjournal = {PNAS},
  volume = {112},
  number = {32},
  eprint = {26217000},
  eprinttype = {pmid},
  pages = {9956--9960},
  issn = {0027-8424, 1091-6490},
  doi = {10.1073/pnas.1504628112},
  abstract = {Tropical deforestation for the establishment of tree cash crop plantations causes significant alterations to soil organic carbon (SOC) dynamics. Despite this recognition, the current Intergovernmental Panel on Climate Change (IPCC) tier 1 method has a SOC change factor of 1 (no SOC loss) for conversion of forests to perennial tree crops, because of scarcity of SOC data. In this pantropic study, conducted in active deforestation regions of Indonesia, Cameroon, and Peru, we quantified the impact of forest conversion to oil palm (Elaeis guineensis), rubber (Hevea brasiliensis), and cacao (Theobroma cacao) agroforestry plantations on SOC stocks within 3-m depth in deeply weathered mineral soils. We also investigated the underlying biophysical controls regulating SOC stock changes. Using a space-for-time substitution approach, we compared SOC stocks from paired forests (n = 32) and adjacent plantations (n = 54). Our study showed that deforestation for tree plantations decreased SOC stocks by up to 50\%. The key variable that predicted SOC changes across plantations was the amount of SOC present in the forest before conversion—the higher the initial SOC, the higher the loss. Decreases in SOC stocks were most pronounced in the topsoil, although older plantations showed considerable SOC losses below 1-m depth. Our results suggest that (i) the IPCC tier 1 method should be revised from its current SOC change factor of 1 to 0.6 ± 0.1 for oil palm and cacao agroforestry plantations and 0.8 ± 0.3 for rubber plantations in the humid tropics; and (ii) land use management policies should protect natural forests on carbon-rich mineral soils to minimize SOC losses.},
  langid = {english},
  keywords = {cacao,Land-use change,oil palm,rubber,soil carbon,Soil carbon},
  file = {/home/steinmetz-z/.zotero/zotero/ucbib/storage/SRJWWTNE/Straaten et al. - 2015 - Conversion of lowland tropical forests to tree cas.pdf}
}

@article{vanWezelEnvironmental2000,
  title = {Environmental {{Risk Limits}} for {{Two Phthalates}}, with {{Special Emphasis}} on {{Endocrine Disruptive Properties}}},
  author = {van Wezel, A. P. and van Vlaardingen, P. and Posthumus, R. and Crommentuijn, G. H. and Sijm, D. T. H. M.},
