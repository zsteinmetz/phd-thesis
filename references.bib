  shorttitle = {Distinct Microplastic Distributions in Soils of Different Land-Use Types},
  author = {Wang, Jiao and Li, Jiayao and Liu, Sitong and Li, Hongyu and Chen, Xiaochen and Peng, Chu and Zhang, Pingping and Liu, Xianhua},
