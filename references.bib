@article{O'ConnorMicroplastics2019,
  title = {Microplastics Undergo Accelerated Vertical Migration in Sand Soil Due to Small Size and Wet-Dry Cycles},
  author = {O'Connor, David and Pan, Shizhen and Shen, Zhengtao and Song, Yinan and Jin, Yuanliang and Wu, Wei-Min and Hou, Deyi},
  date = {2019-06-01},
  journaltitle = {Environmental Pollution},
  shortjournal = {Environmental Pollution},
  volume = {249},
