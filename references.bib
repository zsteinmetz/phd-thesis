}

@article{Diaz-PerezColored2002,
  title = {Colored {{Plastic Film Mulches Affect Tomato Growth}} and {{Yield Via Changes}} in {{Root-zone Temperature}}},
  author = {Díaz-Pérez, Juan C. and Batal, K. Dean},
  date = {2002-12},
