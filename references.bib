@article{CarminatiRhizosphere2013,
  title = {Rhizosphere Wettability Decreases with Root Age: A Problem or a Strategy to Increase Water Uptake of Young Roots?},
  shorttitle = {Rhizosphere Wettability Decreases with Root Age: A Problem or a Strategy to Increase Water Uptake of Young Roots?},
