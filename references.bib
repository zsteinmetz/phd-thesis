@article{WamplerThermometric1989,
  title = {Thermometric Behavior of Polyolefins},
  author = {Wampler, Thomas P.},
  date = {1989-03-01},
  journaltitle = {Journal of Analytical and Applied Pyrolysis},
  shortjournal = {Journal of Analytical and Applied Pyrolysis},
  volume = {15},
