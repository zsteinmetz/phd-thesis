@article{ZhuSoil2015,
  title = {Soil Mulching Can Mitigate Soil Water Deficiency Impacts on Rainfed Maize Production in Semiarid Environments},
  author = {Zhu, Lin and Liu, Jian-liang and Luo, Sha-sha and Bu, Ling-duo and Chen, Xin-ping and Li, Shi-qing},
