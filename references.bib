@article{BlairAverage2019,
  title = {Average Daily Flow of Microplastics through a Tertiary Wastewater Treatment Plant over a Ten-Month Period},
  author = {Blair, Reina M. and Waldron, Susan and Gauchotte-Lindsay, Caroline},
