  author = {Schmidt, Michael W. I. and Torn, Margaret S. and Abiven, Samuel and Dittmar, Thorsten and Guggenberger, Georg and Janssens, Ivan A. and Kleber, Markus and Kögel-Knabner, Ingrid and Lehmann, Johannes and Manning, David A. C. and Nannipieri, Paolo and Rasse, Daniel P. and Weiner, Steve and Trumbore, Susan E.},
