  shorttitle = {Plastics in Soil},
  author = {Bläsing, Melanie and Amelung, Wulf},
  date = {2018-01},
  journaltitle = {Science of The Total Environment},
  shortjournal = {Sci. Total Environ.},
  volume = {612},
