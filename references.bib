@article{MenzelExplicitly2021,
  title = {Explicitly and {{Implicitly Measured Valence}} and {{Risk Attitudes Towards Plastic Packaging}}, {{Plastic Waste}}, and {{Microplastic}} in a {{German Sample}}},
