  keywords = {accumulation,atrazine,biodegradation,biofumigation,Biofumigation,degradation,DEGRADATION,Environmental Sciences & Ecology,Fungicide disappearance,impact,management,mulching,Mulching,pesticides,Soil decontamination,Solar heating},
