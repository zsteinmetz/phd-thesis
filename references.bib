@article{StaplesEnvironmental1997,
  title = {The Environmental Fate of Phthalate Esters: {{A}} Literature Review},
  shorttitle = {The Environmental Fate of Phthalate Esters},
  author = {Staples, Charles A and Peterson, Dennis R and Parkerton, Thomas F and Adams, William J},
  date = {1997-08},
  journaltitle = {Chemosphere},
