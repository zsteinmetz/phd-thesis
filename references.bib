@article{ZhouMicroplastics2020,
  title = {Microplastics in Agricultural Soils on the Coastal Plain of {{Hangzhou Bay}}, East {{China}}: {{Multiple}} Sources Other than Plastic Mulching Film},
  shorttitle = {Microplastics in Agricultural Soils on the Coastal Plain of {{Hangzhou Bay}}, East {{China}}},
  author = {Zhou, Bianying and Wang, Jiaqing and Zhang, Haibo and Shi, Huahong and Fei, Yufan and Huang, Shunyin and Tong, Yazhi and Wen, Dishi and Luo, Yongming and Barceló, Damià},
  date = {2020-04-15},
  journaltitle = {Journal of Hazardous Materials},
