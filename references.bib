@article{Diaz-PerezBell2010,
  title = {Bell {{Pepper}} ({{Capsicum}} Annum {{L}}.) {{Grown}} on {{Plastic Film Mulches}}: {{Effects}} on {{Crop Microenvironment}}, {{Physiological Attributes}}, and {{Fruit Yield}}},
