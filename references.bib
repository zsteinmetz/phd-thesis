@article{MonikhMethod2021,
  title = {Method for Extraction of Nanoscale Plastic Debris from Soil},
  author = {Monikh, Fazel Abdolahpur and Doornhein, Nikki and Romeijn, Stefan and Vijver, Martina G. and Peijnenburg, Willie J. G. M.},
