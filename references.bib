@article{QiImpact2020,
  title = {Impact of Plastic Mulch Film Debris on Soil Physicochemical and Hydrological Properties},
  author = {Qi, Yueling and Beriot, Nicolas and Gort, Gerrit and Huerta Lwanga, Esperanza and Gooren, Harm and Yang, Xiaomei and Geissen, Violette},
  date = {2020-11-01},
  journaltitle = {Environmental Pollution},
  shortjournal = {Environmental Pollution},
  volume = {266},
