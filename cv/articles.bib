  keywords = {binding forms,Copper-based fungicides,farming,fertilizer-derived,Fertilizer-derived uranium,heavy metal speciation,organic,uranium,viticulture},
  annotation = {fachbereich=FB7,institute=IES,arbeitsgruppe=UC,peer=YES,intern=YES,projekt=Aufland},
